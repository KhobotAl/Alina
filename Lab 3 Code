#include <iostream>
#include <cmath>
using namespace std;

// Декларація функцій
void task_if19();  // Завдання 1
void task_if25();  // Завдання 2

int main() {
    int menu;
    cout << "Номер завдання: ";
    cin >> menu;

    // Перемикання між завданнями
    switch (menu) {
        case 19: 
            task_if19(); 
            break;  // Завдання 1
        case 25: 
            task_if25(); 
            break; // Завдання 2
        default: 
            cout << "Неправильне завдання! (Only 19, 25)" << endl;  // Повідомлення про помилку
    }

    return 0;  // Завершення програми
}

// Завдання 1 реалізація
void task_if19() {
    int a, b, c, d;
    cout << "************* If 19 *****************" << endl;
    cout << "Введіть чотири числа: ";
    cin >> a >> b >> c >> d;

    if (!cin) { // Перевірка на коректність вводу
        cout << "Неправильне введення!" << endl;
        return;
    }

    // Логіка визначення унікального числа
    if (a == b && b == c)
        cout << "Порядковий номер: 4" << endl; // d унікальне
    else if (a == b && b == d)
        cout << "Порядковий номер: 3" << endl; // c унікальне
    else if (a == c && c == d)
        cout << "Порядковий номер: 2" << endl; // b унікальне
    else if (b == c && c == d)
        cout << "Порядковий номер: 1" << endl; // a унікальне
    else
        cout << "Помилка: невірні дані!" << endl;
}

// Реалізація завдання 2
void task_if25() {
    float x, y, a, b;

    // Виведення повідомлення про параметри
    cout << "*********** Точка в геометричній області 25 ************" << endl;
    cout << "Параметри a (діаметр кола), b (сторона квадрата): ";
    cin >> a >> b;

    // Перевірка коректності введених даних
    if (!cin || a <= 0 || b <= 0 || b < a) {
        // Виведення повідомлення про помилку у разі некоректного введення
        cout << "Помилка: Має бути числове значення, більше за нуль, не нульове та b >= a!" << endl;
        return;
    }

    // Обчислення площі чверті кола
    float quarter_circle_area = (M_PI * (a / 2) * (a / 2)) / 4.0; // Площа чверті кола
    // Обчислення площі чверті квадрата
    float quarter_square_area = (b * b) / 4.0; // Площа чверті квадрата
    // Обчислення площі фігури як різниці між чвертю квадрата та чвертю кола
    float figure_area = (quarter_square_area - quarter_circle_area); // Площа фігури
    // Обчислення периметра фігури
    float figure_perimeter = b + (M_PI * (a / 2)) / 2.0; // Периметр

    // Виведення результатів
    cout << "Площа фігури: " << figure_area << endl;
    cout << "Периметр фігури: " << figure_perimeter << endl;

    // Введення координат точки
    cout << "Координати точки x, y: ";
    cin >> x >> y;

    // Перевірка, чи введено коректні координати
    if (!cin) {
        cout << "Помилка: Координати мають бути числовими!" << endl;
        return;
    }

    // Умови потрапляння чверті кола в 3-ю чверть графіка (x < 0 і y < 0)
    // Чверть кола повинна бути в 3-й чверті, тому перевірка для 3-ї чверті:
    float circle_check = (x + b / 2) * (x + b / 2) + (y + a / 2) * (y + a / 2); // Зміщення в 3-ю чверть

    // Перевірка, чи знаходиться точка в 4-й чверті графіка (x > 0 і y < 0)
    if (x >= 0 && x <= b && y <= 0 && y >= -b && circle_check > (a / 2) * (a / 2)) {
        // Якщо точка знаходиться в 4-й чверті
        cout << "Точка знаходиться в області фігури!" << endl;
    } else {
        // Якщо точка не знаходиться в 4-й чверті або не належить фігурі
        cout << "Точка не знаходиться в області фігури!" << endl;
    }
}
